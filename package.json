{
  "name": "graph-battles",
  "version": "0.0.1",
  "description": "A turn-based tactics game for web built with Phaser, Mobx, and React.",
  "scripts": {
    "compile:es6": "tsc",
    "compile:es5": "babel --source-maps inline --presets=es2015,react --out-dir build/es5 build/es6",
    "bundle:client": "webpack --config webpack.config.js",
    "bundle:resolver": "webpack --config webpack.config.resolver.js",
    "compile": "yarn compile:es6",
    "build:client": "yarn compile && yarn bundle:client",
    "build:resolver": "yarn compile && yarn bundle:resolver",
    "test": "yarn test:model || yarn test:resolver",
    "test:model": "NODE_PATH=\"$NODE_PATH:$PWD/build/es5\" mocha --recursive build/es5/Model/**/*Test.js",
    "test:resolver": "NODE_PATH=\"$NODE_PATH:$PWD/build/es5\" mocha --recursive build/es5/Resolver/**/*Test.js",
    "package:api": "zip -j build/api.zip build/bundle/api.js build/bundle/resolver.js",
    "deploy:api": "yarn serverless deploy --stage dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomwwright/graph-battles"
  },
  "author": "Tom Wright",
  "license": "MIT",
  "homepage": "https://github.com/tomwwright/graph-battles#readme",
  "dependencies": {
    "async": "^2.4.1",
    "axios": "^0.16.1",
    "emojis-list": "^2.0.1",
    "glob": "^7.1.1",
    "json-loader": "^0.5.4",
    "json5": "^0.5.0",
    "mobx": "^3.2.1",
    "mobx-react": "^4.2.2",
    "phaser-ce": "^2.7.9",
    "react": "^15.3.1",
    "react-dom": "^15.3.1",
    "rebass": "^1.0.4",
    "sweetalert": "^1.1.3",
    "underscore": "^1.8.3",
    "uuid": "^3.0.1"
  },
  "devDependencies": {
    "@types/async": "^2.0.40",
    "@types/aws-lambda": "^0.0.10",
    "@types/chai": "^3.5.2",
    "@types/mocha": "^2.2.41",
    "@types/node": "^7.0.18",
    "@types/react": "^15.0.24",
    "@types/react-dom": "^15.5.0",
    "@types/sinon": "^2.2.1",
    "@types/sweetalert": "^1.1.27",
    "@types/underscore": "^1.8.0",
    "@types/uuid": "^2.0.29",
    "aws-sdk": "^2.7.21",
    "aws-sdk-mock": "^1.7.0",
    "babel-cli": "^6.24.1",
    "babel-core": "^6.14.0",
    "babel-loader": "^7.0.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.14.0",
    "babel-preset-react": "^6.11.1",
    "chai": "^3.5.0",
    "expose-loader": "^0.7.3",
    "imports-loader": "^0.7.1",
    "mocha": "^3.1.2",
    "serverless": "^1.14.0",
    "sinon": "^2.2.0",
    "source-map-loader": "^0.2.1",
    "typescript": "^2.3.4",
    "webpack": "^2.5.1"
  },
  "babel": {
    "presets": ["es2015", "react"]
  }
}
