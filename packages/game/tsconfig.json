{
  "compileOnSave": false,
  "compilerOptions": {
    "experimentalDecorators": true,
    //"strictNullChecks": true,
    "baseUrl": "src/",
    "outDir": "build/es5",
    "inlineSourceMap": true,
    "keyofStringsOnly": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "es5",
    //"module": "es6",
    "jsx": "react",
    "noEmitOnError": true,
    "lib": [
      "es2015",
      "dom"
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx"
  ],
  "references": [
    { "path": "../models" }
  ]
}