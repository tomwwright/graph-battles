{
  "compileOnSave": false,
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "experimentalDecorators": true,
    //"strictNullChecks": true,
    "rootDir": "src/",
    "outDir": "build",
    "inlineSourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "es5",
    //"module": "es6",
    "noEmitOnError": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
  ]
}